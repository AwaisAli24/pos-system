<%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>

        <div class="add">

            <%if(locals.flag){%>
            <div class="row cards mt-5 mx-5">
                <div class="col-md-6">
                    <div class="card ">
                        <h4 class="card-header bg-primary"><svg xmlns="http://www.w3.org/2000/svg" width="25"
                                height="30" fill="yellowgreen" class="bi bi-currency-rupee" viewBox="0 0 16 16">
                                <path
                                    d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4z" />
                            </svg>Cash</h4>
                        <div class="card-body">
                            <h5 class="card-title">Total Sales: <%=cashSum.count%></h5>
                            <br>
                            <h5 class="card-title">Total Amount: <%=cashSum.sum%></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <a href="online">
                    <div class="card ">
                        <h4 class="card-header bg-primary "><svg xmlns="http://www.w3.org/2000/svg" width="25"
                                height="30" fill="yellow" class="bi bi-phone" viewBox="0 0 16 16">
                                <path
                                    d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                            </svg>Online</h4>
                        <div class="card-body">
                            <h5 class="card-title">Total Sales: <%=mobileSum.count%></h5>
                            <br>
                            <h5 class="card-title">Total Amount: <%=mobileSum.sum%></h5>
                        </div>
                    </div>
                    </a>
                </div>
            </div>
            <%}%>
            <div class="row">
                <table class="table mx-3 mt-5">
                    <thead>
                        <tr>
                            <th scope="col">sale-id</th>
                            <th scope="col" colspan="2">Date</th>
                            <th scope="col" colspan="1">Amount</th>
                            <th scope="col">View Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%sales.forEach((sale)=>{%>
                            <tr>
                                <th scope="row">
                                    <%=sale.id%>
                                </th>
                                <td colspan="2">
                                    <%=sale.date%>
                                </td>
                                <td>
                                    <%=sale.amount%>
                                </td>
                                <td>
                                    <a href="/sale/get/<%=sale.id%>"><button class="btn btn-success">info</button></a>
                                </td>
                            </tr>
                            <%});%>
                    </tbody>
                </table>
            </div>

        </div>
        <%- include('footer.ejs') %>