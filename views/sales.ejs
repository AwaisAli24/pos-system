<%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>
        <div class="add">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">sale-id</th>
                        <th scope="col" colspan="2">Date</th>
                        <th scope="col" colspan="1">Amount</th>
                        <th scope="col">View Info</th>
                    </tr>
                </thead>
                <tbody>
                    <%sales.forEach((sale)=>{%>
                        <tr>
                            <th scope="row">
                                <%=sale.id%>
                            </th>
                            <td colspan="2">
                                <%=sale.date%>
                            </td>
                            <td>
                                <%=sale.amount%>
                            </td>
                            <td>
                                <button class="btn btn-secondary "><a href="/sale/get/<%=sale.id%>">Info</a></button>
                            </td>
                        </tr>
                        <%});%>
                </tbody>
            </table>
        </div>
        </div>
        <%- include('footer.ejs') %>