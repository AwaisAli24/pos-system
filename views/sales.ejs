<%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>

        <div class="add">

            <%if(locals.flag){%>
                <div class="row cards mt-5 mx-5">
                    <div class="col-md-6">
                        <a href="<%=time%>/cash" class="card-link">
                            <div class="card ">
                                <h4 class="card-header bg-primary"><svg xmlns="http://www.w3.org/2000/svg" width="22"
                                        height="22" fill="lightgreen" class="bi bi-cash-stack mx-2" viewBox="0 0 16 16">
                                        <path
                                            d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                        <path
                                            d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2z" />
                                    </svg>Cash</h4>
                                <div class="card-body">
                                    <h5 class="card-title">Total Sales: <%=cashSum.count%>
                                    </h5>
                                    <br>
                                    <h5 class="card-title">Total Amount: <%=cashSum.sum%>
                                    </h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="<%=time%>/online" class="card-link">
                            <div class="card ">
                                <h4 class="card-header bg-primary "><svg xmlns="http://www.w3.org/2000/svg" width="25"
                                        height="30" fill="yellow" class="bi bi-phone" viewBox="0 0 16 16">
                                        <path
                                            d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                                    </svg>Online</h4>
                                <div class="card-body">
                                    <h5 class="card-title">Total Sales: <%=mobileSum.count%>
                                    </h5>
                                    <br>
                                    <h5 class="card-title">Total Amount: <%=mobileSum.sum%>
                                    </h5>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <%}%>
                    <div class="row">
                        <table class="table mx-3 mt-5">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col" colspan="2">Date</th>
                                    <th scope="col" colspan="1">Amount</th>
                                    <%if(locals.online){%>
                                        <th scope="col" colspan="1">Name</th>
                                    <th scope="col" colspan="1">Number</th>
                                    <%}%>
                                    <th scope="col">View Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%sales.forEach((sale,index)=>{%>
                                    <tr>
                                        <th scope="row">
                                            <%=index+1%>
                                        </th>
                                        <td colspan="2">
                                            <%=sale.date%>
                                        </td>
                                        <td>
                                            <%=sale.amount%>
                                        </td>
                                        <%if(locals.online){%>
                                        <td><%=sale.name%></td>
                                        <td><%=sale.phone_number%></td>
                                        <%}%>
                                        <td>
                                            <a href="/sale/get/<%=sale.id%>"><button
                                                    class="btn btn-success">info</button></a>
                                        </td>
                                    </tr>
                                    <%});%>
                            </tbody>
                        </table>
                    </div>

        </div>
        <%- include('footer.ejs') %>