<%- include('header.ejs') %>
    <%- include('sidebar.ejs') %>
        <div class="add">
            <div class="row cards mt-5 mx-5">
                <div class="col-md-12">
                    <div class="d-flex flex-row cards">
                        <div class="card">
                            <h4 class="card-header bg-primary">Current Day</h4>
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title">Total Sales: <span class="amount">
                                            <%=daily.count%>
                                        </span></h5>
                                </div>
                                <div>
                                    <h6 class="card-title">Total Amount: <span class="amount">
                                            <%=daily.sum%>
                                        </span></h6>
                                </div>
                            </div>
                        </div>
                        <div class="card mx-5">
                            <h4 class="card-header bg-primary">7 Days</h4>
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title">Total Sales: <span class="amount">
                                            <%=weekly.count%>
                                        </span></h5>
                                </div>
                                <div>
                                    <h6 class="card-title">Total Amount: <span class="amount">
                                            <%=weekly.sum%>
                                        </span></h6>
                                </div>
                            </div>
                        </div>
                        <div class="card mx-5">
                            <h4 class="card-header bg-primary">30 Days</h4>
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title">Total Sales: <span class="amount">
                                            <%=monthly.count%>
                                        </span></h5>
                                </div>
                                <div>
                                    <h6 class="card-title">Total Amount: <span class="amount">
                                            <%=monthly.sum%>
                                        </span></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
          <div class="col-md-6">
            <div class="card2 mx-5 mt-5">
              <h4 class="card-header bg-success">Top 10 sale items</h4>
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Product Name</th>
                      <th scope="col">Quantity</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%products.forEach((product,index)=>{ %>
                    <tr>
                      <th scope="row"><%=index+1%></th>
                      <td><%=product.name%></td>
                      <td><%=product.total_quantity_sold%></td>
                    </tr>
                    <%});%>

                  </tbody>
                </table>
              </div>
            </div>
          </div>
           <div class="col-md-6">
            <div class="card2 mx-5 mt-5">
              <h4 class="card-header bg-danger">Least items</h4>
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Product Name</th>
                      <th scope="col">Quantity</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%lessProducts.forEach((product,index)=>{%>
                    <tr>
                      <th scope="row"><%=index+1%></th>
                      <td><%=product.name%></td>
                      <td><%=product.quantity%></td>
                    </tr>
                    <%});%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        </div>
        <%- include('footer.ejs') %>